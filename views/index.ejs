<% include ./partials/header.ejs %>
  <div
    class="bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1625768376503-68d2495d78c5?q=80&w=1925&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] w-full h-screen flex items-center justify-center">
    <div class="w-[25vw] h-[70vh] bg-white px-20 py-10 rounded-[30px] overflow-auto">
      <h1 class="text-3xl text-center tracking-tight font-semibold text-zinc-700 capitalize leading-none">Welcome to
        Pinterest</h1>
      <% if (error) { %>
        <p class="error text-sm font-normal text-center">
          <%= error %>
        </p>
        <% } %>
          <form action="/login" method="POST">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
              placeholder="username" id="">
            <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
              placeholder="password" id="">
            <a class="mt-2 font-semibold text-zinc-500 inline-block" href="#">Forget Password ?</a>
            <input class="border-2 block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
              value="Login">
            <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree to
              Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy. Notice at
              collection
              .</p>
          </form>
          <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/register">Don't
            have an account ? Sign Up</a>
    </div>
  </div>

  <% include ./partials/footer.ejs %>