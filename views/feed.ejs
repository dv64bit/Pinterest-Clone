<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pintreast</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="stylesheets/feed.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>


<body>
    <% if (nav===true) { %>
        <div class="w-full px-10 py-3 flex justify-between bg-zinc-950 text-white items-center">
            <h3>Pinterest</h3>
            <div class="flex gap-10 items-center">
                <a href="/profile">Profile</a>
                <a href="/feed">Feed</a>
                <a class="px-3 py-2 bg-red-700 text-white rounded-lg" href="/logout">Logout</a>
            </div>
        </div>
        <% } %>

            <div class="grided w-full min-h-screen bg-zinc-950 text-white">
                <% posts.forEach(element=> { %>
                    <div class="grided-item">
                        <img src="/images/uploads/<%= element.newPostedImage %>" alt="">
                        <h5 class="mt-2 text-sm pl-3">
                            <%= element.postTitle %>
                                <h5 class="text-sm font-medium opacity-50 pl-3">
                                    @<%= element.loggedUserId.username %>
                                </h5>
                        </h5>
                    </div>
                    <% }) %>
            </div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

            <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>

            <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
            <script>
                $(".grided").imagesLoaded(function () {
                    $(".grided").masonry({
                        itemSelector: ".grided-item"
                    });
                });
            </script>
</body>

</html>