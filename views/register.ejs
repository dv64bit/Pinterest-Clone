<% include ./partials/header.ejs %>
    <div
        class="bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1551225183-94acb7d595b6?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1yZWxhdGVkfDE3fHx8ZW58MHx8fHx8')] w-full h-screen flex items-center justify-center">
        <div class="w-[25vw] h-[60vh] bg-white px-20 py-10 rounded-[30px]">
            <h1 class="text-3xl mb-10 text-center tracking-tight font-semibold text-zinc-700 capitalize leading-none">
                Create New Account</h1>
            <form action="/register" method="POST">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="fullName"
                    placeholder="Full Name" id="">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email"
                    placeholder="Email" id="">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username"
                    placeholder="username" id="">
                <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password"
                    placeholder="password" id="">
                <input class="border-2 block mt-5 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit"
                    value="Create an Account">
                <p class="text-xs font-semibold text-zinc-700 mt-7 w-3/4 mx-auto text-center">By continuing, you agree
                    to
                    Pinterest's Terms of Service; Opens a new tab and acknowledge you've read our Privacy Policy. Notice
                    at
                    collection
                    .</p>
            </form>
            <a class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full" href="/">Already Have
                Account ? Log In</a>
        </div>
    </div>

