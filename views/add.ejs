<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-950 px-10 py-5 text-white">
    <h1 class="text-xl"Create a new post.></h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class=" block w-1/3 px-3 py-2" type="file" name="postImage" id="">
        <input class="text-black block w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" name="title" placeholder="Title" id="">
        <textarea class="text-black block w-1/3 px-3 py-2 border-2 h-60 mt-2 rounded-md" type="text" name="caption" placeholder="Caption" id=""></textarea>
        <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md" type="submit" value="Create a Post">
    </form>
</div>
